package aptech.fjava.s5;

public class NumberPyramid {
	public static void main(String[] args) {
		outer: for (int i = 1; i <= 6; i++) {
			for (int j = 1; j <=6; j++) {
				if (j > i) {
					System.out.println();
					/*
					 * Terminates the loop counting j and continues the next iteration of the loop
					 * counting I
					 */
					continue outer;
				} // End of if statement
				System.out.print('*');
			} // End of inner for loop
			System.out.println("\nThis is the outer loop.");
		} // End of outer for loop
		System.out.println("Good-Bye");
	}
}
