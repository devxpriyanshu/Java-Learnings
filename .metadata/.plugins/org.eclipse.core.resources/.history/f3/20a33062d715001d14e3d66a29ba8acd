package aptech.fjava.session5;

import java.util.Scanner;

public class AcceptNumbers {
	public static void main(String[] args) {
		int cnt, number; // cntvariable is a counter variable
		for (cnt = 1, number = 0; ; cnt++) {
			// Scanner class is used to accept data from the keyboard
			@SuppressWarnings("resource")
			Scanner input = new Scanner(System.in);
			System.out.println("Enter a number: ");
			number = input.nextInt();
			if (number == 0) {
				// break statement terminates the loop
				System.out.println("you have entered 0, so stoping here");
				break;
			} // End if statement
		} // End of for statement
	}
}
